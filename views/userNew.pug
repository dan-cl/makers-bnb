extends layout

block content

  .header
    ul
      li
        a.active(href='/') Home
      li
        a(href='/users/new') Sign up
      li
        a(href='/users/login') Sign in
      li
        a(href='/listings') View Listings
      li
        a(href='/index/goodbye') Sign out

  h1 HELLO YOU LOVELY ENTHUSIASTIC USER

  form(action="/users/new", method="post")
    div.input
      span.label Name
      input(type="text", name="name")
    div.input
      span.label Username
      input(type="text", name="username")
    div.input
      span.label email
      input(type="email", name="email")
    div.input
      span.label Password
      input(type="password", name="password")
    div.input
      span.label Password confirmation
      input(type="password", name="password")
    div.actions
      input(type="submit", value="Sign up")
